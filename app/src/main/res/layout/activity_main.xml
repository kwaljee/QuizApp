<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8C000000"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionHeaderFont"
                android:text="@string/question_1_header" />

            <TextView
                style="@style/QuestionFont"
                android:layout_margin="8dp"
                android:text="@string/question_1" />

            <EditText
                android:id="@+id/editTxtQuestion1"
                style="@style/EditTextFont" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/correct_answer1"
                    style="@style/correctAnswer" />

                <TextView
                    android:id="@+id/incorrect_answer1"
                    style="@style/incorrectAnswer" />
            </RelativeLayout>

            <TextView
                style="@style/QuestionHeaderFont"
                android:text="@string/question_2_header" />

            <TextView
                style="@style/QuestionFont"
                android:text="@string/question_2" />

            <ImageView
                android:id="@+id/biliary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/biliary_tract_image_description"
                android:scaleType="fitCenter"
                android:src="@drawable/biliary_system" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radioBtnQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioBtnQuestion2A"
                        style="@style/RadioButtonFont"
                        android:layout_marginTop="16dp"
                        android:text="@string/question_2a" />

                    <RadioButton
                        android:id="@+id/radioBtnQuestion2B"
                        style="@style/RadioButtonFont"
                        android:text="@string/question_2b" />

                    <RadioButton
                        android:id="@+id/radioBtnQuestion2C"
                        style="@style/RadioButtonFont"
                        android:text="@string/question_2c" />

                    <RadioButton
                        android:id="@+id/radioBtnQuestion2D"
                        style="@style/RadioButtonFont"
                        android:layout_marginBottom="16dp"
                        android:text="@string/question_2d" />
                </RadioGroup>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/correct_answer2"
                    style="@style/correctAnswer" />

                <TextView
                    android:id="@+id/incorrect_answer2"
                    style="@style/incorrectAnswer" />
            </RelativeLayout>

            <TextView

                style="@style/QuestionHeaderFont"
                android:text="@string/question_3_header" />

            <TextView
                style="@style/QuestionFont"
                android:layout_margin="8dp"
                android:text="@string/question_3" />

            <CheckBox
                android:id="@+id/checkBtnQuestion3A"
                style="@style/CheckButtonFont"
                android:text="@string/question_3a" />

            <CheckBox
                android:id="@+id/checkBtnQuestion3B"
                style="@style/CheckButtonFont"
                android:text="@string/question_3b" />

            <CheckBox
                android:id="@+id/checkBtnQuestion3C"
                style="@style/CheckButtonFont"
                android:text="@string/question_3c" />

            <CheckBox
                android:id="@+id/checkBtnQuestion3D"
                style="@style/CheckButtonFont"
                android:text="@string/question_3d" />

            <CheckBox
                android:id="@+id/checkBtnQuestion3E"
                style="@style/CheckButtonFont"
                android:layout_marginBottom="16dp"
                android:text="@string/question_3e" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/correct_answer3"
                    style="@style/correctAnswer" />

                <TextView
                    android:id="@+id/incorrect_answer3"
                    style="@style/incorrectAnswer" />
            </RelativeLayout>

            <TextView
                style="@style/QuestionHeaderFont"
                android:text="@string/question_4_header" />

            <TextView
                style="@style/QuestionFont"
                android:layout_margin="8dp"
                android:text="@string/question_4" />

            <EditText
                android:id="@+id/editTxtQuestion4"
                style="@style/EditTextFont" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/correct_answer4"
                    style="@style/correctAnswer" />

                <TextView
                    android:id="@+id/incorrect_answer4"
                    style="@style/incorrectAnswer" />
            </RelativeLayout>

            <TextView
                style="@style/QuestionHeaderFont"
                android:text="@string/question_5_header" />

            <TextView
                style="@style/QuestionFont"
                android:text="@string/question_5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioBtnQuestion5A"
                        style="@style/RadioButtonFont"
                        android:layout_marginTop="16dp"
                        android:text="@string/question_5a" />

                    <RadioButton
                        android:id="@+id/radioBtnQuestion5B"
                        style="@style/RadioButtonFont"
                        android:text="@string/question_5b" />

                    <RadioButton
                        android:id="@+id/radioBtnQuestion5C"
                        style="@style/RadioButtonFont"
                        android:text="@string/question_5c" />

                    <RadioButton
                        android:id="@+id/radioBtnQuestion5D"
                        style="@style/RadioButtonFont"
                        android:layout_marginBottom="16dp"
                        android:text="@string/question_5d" />
                </RadioGroup>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/correct_answer5"
                    style="@style/correctAnswer" />

                <TextView
                    android:id="@+id/incorrect_answer5"
                    style="@style/incorrectAnswer" />
            </RelativeLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="124dp"
                android:layout_marginRight="124dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccent"
                android:onClick="onSubmit"
                android:text="@string/submit_btn"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>